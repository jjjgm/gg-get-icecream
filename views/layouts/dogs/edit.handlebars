{{! edit.handlebars }}

{{> main }}

{{#contentFor "title"}}Edit Dog Profile{{/contentFor}}

{{#contentFor "body"}}
  <section id="edit-dog-form">
    <h1>Edit Dog Profile</h1>
    <form action="/dogs/{{dog.id}}?_method=PUT" method="POST">
      <label for="name">Name:</label>
      <input type="text" name="name" value="{{dog.name}}" required>

      <label for="breed">Breed:</label>
      <input type="text" name="breed" value="{{dog.breed}}" required>

      <label for="age">Age:</label>
      <input type="number" name="age" value="{{dog.age}}" required>

      <label for="description">Description:</label>
      <textarea name="description" rows="5" cols="30">{{dog.description}}</textarea>

      <input type="submit" value="Save Changes">
    </form>
    <p><a href="/dogs/{{dog.id}}">Cancel</a></p>
  </section>
{{/contentFor}}
