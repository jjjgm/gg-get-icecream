                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                    
                                        <div class="modal-body">
                                            <div class="form-floating mb-3">
                                                <input type="text" class="form-control" id="edit-dogname" placeholder="Edit name here">
                                                <label for="floatingInput">Name</label>
                                            </div>

                                            <div class="form-floating mb-3">
                                                <input type="text" class="form-control" id="edit-doglocation" placeholder="Edit location here">
                                                <label for="floatingInput">Location</label>
                                            </div>

                                            <div class="form-floating mb-3">
                                                <textarea class="form-control" placeholder="Edit bio here" id="edit-dogbio"></textarea>
                                                <label for="floatingTextarea">Bio</label>
                                            </div>

                                            <hr>

                                            <h6>Edit likes and dislikes</h6>

                                            <table class="my-3 w-100">
                                                {{#each}}
                                                <tr class="my-likes">
                                                    <th scope="row">like</th>
                                                    <td>{{information}}</td>
                                                    <td><span class="material-symbols-rounded delete-likes">delete</span></td>
                                                </tr>
                                                {{/each}}
                                            </table>

                                            <div class="input-group mb-3 w-100">
                                                <button class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Pick</button>
                                                <ul class="dropdown-menu">
                                                    <li><a href="#" class="dropdown-item" value="true">Like</a></li>
                                                    <li><a href="#" class="dropdown-item" value="false">Dislike</a></li>
                                                </ul>
                                                <input type="text" class="form-control" aria-label="Text input with dropdown button">
                                                <button type="button" class="submit-like">Submit</button>
                                            </div>
                                        </div>

                                        <div class="modal-footer">
                                            <button type="button" data-bs-dismiss="modal">Close</button>
                                            <button type="button" data-bs-dismiss="modal">Save changes</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <h6>Bio</h6>
                    <p>
                        {{petbio}}
                    </p>
                </div>

                <div class="container mt-4">
                    <div class="row">
                        <div class="col-6">
                            <h6>Likes</h6>
                            <ul>
                                {{#each}}
                                <li>{{information}}</li>
                                {{/each}}
                            </ul>
                        </div>
                        <div class="col-6">
                            <h6>Dislikes</h6>
                            <ul>
                                {{#each}}
                                <li>{{information}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        {{!-- if my friends is checked --}}
            <div id="friend-list">
                <div>
                <h1>My friends</h1>
                <div>
                    <table class="w-100">
                        <tbody>
                            {{#each}}
                            <tr class="human-friend">
                                <th scope="row" class="py-3">{{friendname}}</th>
                                <td class="py-3">‚úâÔ∏è</td>
                                <button class="py-3 ghost-friend">üëª</button>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div class="mt-4">
                <h1>My furry friends</h1>
                <div>
                    <table class="w-100">
                        <tbody>
                            <tr class="dog-friend">
                                <th scope="row" class="py-3">{{dogname}}</th>
                                <td class="py-3">üê∂</td>
                                <td class="py-3">‚úâÔ∏è</td>
                                <button class="py-3 ghost-dog">üëª</button>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>

{{ else }}
<section class="min-vh-100 d-flex justify-content-center align-items-center">
    <div>
        <h1 class="mb-4">Thank you for being a friend.</h1>
        <form class="mb-5">
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="user" placeholder="name@example.com">
                <label for="user">Email address</label>
            </div>

            <div class="form-floating">
                <input type="password" class="form-control" id="password" placeholder="Password">
                <label for="password">Password</label>
            </div>

            <div class="d-flex justify-content-center align-items-center mt-4">
                <button class="w-75">Log in</button>
            </div>
        </form>
        <h6 class="text-center">Don't have an account? <a href="">Sign up</a></h6>
    </div>
</section>

{{ /if }}