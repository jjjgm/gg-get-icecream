{{ #if logged_in }}
<header>
    <nav class="navbar justify-content-end">
        <ul class="nav my-2">
            <li class="nav-item mx-3">Search for a new friend</li>
            <li class="nav-item mx-3">Account</li>
            <li class="nav-item mx-3">Logout</li>
        </ul>
    </nav>
</header>

<div class="container-fluid">
    
    <div class="row">
        <div id="sidebar" class="col-3 min-vh-100 pt-5">
            <div class="btn-group-vertical w-100">
                <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" checked>
                <label class="btn btn-outline-primary" for="btnradio1">My profile</label>

                <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off">
                <label class="btn btn-outline-primary" for="btnradio2">Dog profile</label>

                <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off">
                <label class="btn btn-outline-primary" for="btnradio3">My friends</label>
            </div>
        </div>

    <!-- user's profile/pet profile/friend's list -->
        <div id="profile-info" class="col-9 min-vh-100 p-4">
            {{!-- if my profile is checked --}}
            <div id="my-profile">
                <h1>Hi, {{username}}</h1>
                <h4>Thank you for being a friend.</h4>

                <div class="container mt-4">
                    <div class="row">
                        <div class="col-5">
                            <img class="profile-pic" src={{path}} alt={{picture}}>
                        </div>

                        <div class="col-7">
                            <h5>{{name}}</h5>
                            <h5>age: {{age}}</h5>
                            <h5>üåê {{location}}</h5>
                            <button class="mt-2">edit profile</button>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <h6>Bio</h6>
                    <p>
                        {{humanbio}}
                    </p>
                </div>

                <div class="container mt-4">
                    <div class="row">
                        <div class="col-6">
                            <h6>Likes</h6>
                            <ul>
                                {{#each}}
                                <li>{{information}}</li>
                                {{/each}}
                            </ul>
                        </div>
                        <div class="col-6">
                            <h6>Dislikes</h6>
                            <ul>
                                {{#each}}
                                <li>{{information}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <h6>Other interests</h6>
                    <ul>
                        {{#each}}
                            <li>{{information}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>


            {{!-- if dog profile is checked --}}
            <div id="dog-profile">
                <div class="container mt-4">
                    <div class="row">
                        <div class="col-5">
                            <img class="profile-pic" src={{picture link}} alt={{some type of description}}>
                        </div>

                        <div class="col-7">
                            <h5>{{petname}}</h5>
                            <h5>age: {{petage}}</h5>
                            <h5>üåê {{petlocation}}</h5>
                            <button class="mt-2">edit profile</button>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <h6>Bio</h6>
                    <p>
                        {{petbio}}
                    </p>
                </div>

                <div class="container mt-4">
                    <div class="row">
                        <div class="col-6">
                            <h6>Likes</h6>
                            <ul>
                                {{#each}}
                                <li>{{information}}</li>
                                {{/each}}
                            </ul>
                        </div>
                        <div class="col-6">
                            <h6>Dislikes</h6>
                            <ul>
                                {{#each}}
                                <li>{{information}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <h6>Other interests</h6>
                    <ul>
                        {{#each}}
                        <li>{{information}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>

            {{!-- if my friends is checked --}}
            <div id="friend-list">
                <div>
                <h1>My friends</h1>
                <div>
                    <table class="w-100">
                        <tbody>
                            {{#each}}
                            <tr>
                                <th scope="row" class="py-3">{{friendname}}</th>
                                <td class="py-3">‚úâÔ∏è</td>
                                <td class="py-3">üóëÔ∏è</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div class="mt-4">
                <h1>My furry friends</h1>
                <div>
                    <table class="w-100">
                        <tbody>
                            <tr>
                                <th scope="row" class="py-3">{{dogname}}</th>
                                <td class="py-3">üê∂</td>
                                <td class="py-3">‚úâÔ∏è</td>
                                <td class="py-3">üóëÔ∏è</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>

{{ else }}
<section class="min-vh-100 d-flex justify-content-center align-items-center">
    <div>
        <h1>Thank you for being a friend.</h1>
        <button>Sign up to start</button>
        <h6>Log in if you already have an account</h6>
    </div>
</section>

{{ /if }}