{{ #if logged_in }}
<header>
    <nav class="navbar justify-content-end">
        <ul class="nav my-2">
            <li class="nav-item mx-3">Search for a new friend</li>
            <li class="nav-item mx-3">Account</li>
            <li class="nav-item mx-3">Logout</li>
        </ul>
    </nav>
</header>

<div class="container-fluid">
    
    <div class="row">
        <div id="sidebar" class="col-3 min-vh-100 pt-5">
            <div class="btn-group-vertical w-100">
                <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" checked>
                <label class="btn btn-outline-primary" for="btnradio1">My profile</label>

                <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off">
                <label class="btn btn-outline-primary" for="btnradio2">Dog profile</label>

                <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off">
                <label class="btn btn-outline-primary" for="btnradio3">My friends</label>
            </div>
        </div>

    <!-- user's profile (same for pet except for headings) -->
        <div class="col-9 min-vh-100 p-4">
            {{ #if }} {{!-- if my profile is checked --}}
                {{> myProfile }}
            {{ /if }}

            {{ #if }} {{!-- if dog profile is checked --}}
                {{> dogProfile}}
            {{ /if }}

            {{ #if }} {{!-- if my friends is checked --}}
                {{> myFriends}}
            {{ /if }}
        </div>
    </div>
</div>

{{ else }}
<section class="min-vh-100 d-flex justify-content-center align-items-center">
    <div>
        <h1>Thank you for being a friend.</h1>
        <button>Sign up to start</button>
        <h6>Log in if you already have an account</h6>
    </div>
</section>

{{ /if }}