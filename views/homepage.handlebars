{{!-- <p>{{user.username}}</p> --}}
<header>
		<nav class="navbar fixed-top justify-content-end">
			<ul class="nav my-2">
				<li class="nav-item mx-3"><a class="nav-link" href="/">Home</a></li>
				<li class="nav-item mx-3"><a class="nav-link" href="/dogs">Dogs</a></li>
				<li class="nav-item mx-3"><a class="nav-link" href="/messages">Messages</a></li>
				<li class="nav-item mx-3"><button class="btn-1" id="logout">Logout</button></li>
			</ul>
		</nav>
	</header>
    
<section class="mt-5 p-3">
    <h1>Hi, {{user.username}}</h1>
    <h3>Thank you for being a friend.</h3>
    
{{#each user.dogs as |dog|}}
    <div class="container mt-4">
        <div class="row">
            <div class="col-6 col-md-5 col-lg-4 d-flex justify-content-center">
                <img class="img-fluid" src={{dog.url}} alt="Image of {{dog.username}}">
            </div>

            <div class="col-6 col-md-7 col-lg-8">
                
                <h3>{{dog.name}}</h3>
                <h5>age: {{dog.age}}</h5>
                <h5>{{dog.breed}}</h5>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h6>Bio</h6>
            <p>
                {{dog.bio}}
            </p>
            {{/each}}
    </div>

</section>